<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="player.ui.LoginController" style="-fx-background-color: #181818;">
    <VBox spacing="20" alignment="CENTER" maxWidth="350">
        <Label text="Zaloguj się" styleClass="header"/>
        <TextField fx:id="usernameField" promptText="user" prefWidth="220"/>
        <PasswordField fx:id="passwordField" promptText="••••" prefWidth="220"/>
        <Button text="Login" onAction="#handleLogin" prefWidth="120"/>
    </VBox>
</StackPane>